<body>
  <div class="main">
    <div class="main-register">
        <%= form_with(model: @acquisition, url: create_new_acquisition_path(@category), method: :post) do |f| %>
            <div class="signup-top-bar">
                <%= link_to acquisition_path(@category) do %>  
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 25 25" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                    </svg>
                <% end %>
                <h2>New transaction</h2>
                <%= f.submit 'Create', class: "devise-btn" %>
            </div>
        
            <div class="field">
                <%= f.text_field :name, placeholder: 'Name', :required => true %>
            </div>
            <div class="field">
                <%= f.number_field :amount, placeholder: 'Amount', :required => true, step: "0.01" %>
            </div>
        <% end %>
       </div>
  </div>
</body>  