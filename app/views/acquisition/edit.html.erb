<h2>Edit Transaction</h2>

<%= form_with(model: @acquisition, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount, required: true, step: :any %>
  </div>

  <%= form.submit 'Update Transaction' %>
<% end %>

<%= link_to 'Back to Categories', categories_path %>

