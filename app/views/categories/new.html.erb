<body>
  <div class="main">
    <div class="main-register">
      <%= form_with(model: @category, url: categories_path, method: :post) do |f| %>
        <div class="signup-top-bar">
          <%= link_to root_path do %>  
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 25 25" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
            </svg>
          <% end %>
          <h2>New Category</h2>
          <%= f.submit 'Create', class: "devise-btn" %>
        </div>
        <div class="field">
          <%= f.text_field :name, placeholder: 'Name', required: true %>
        </div>

        <div class="field">
          <%= f.url_field :icon, placeholder: 'Icon image URL', required: true %>
        </div>
      <% end %>
    </div>
  </div>
</body>  