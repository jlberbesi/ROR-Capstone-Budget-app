
<h2>Edit Category</h2>

<%= form_with(model: @category, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :icon %>
    <%= form.text_field :icon, required: true %>
  </div>

  <%= form.submit 'Update Category' %>
<% end %>

<%= link_to 'Back to Categories', categories_path %>
