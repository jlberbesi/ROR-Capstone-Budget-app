<div class="main-devise">
  <div class="signup-top-bar">
    <%= link_to root_path do %>  
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <h2 class="top-forgot">Forgot your password?</h2>
  </div>  

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field"> 
    <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.submit "Send me reset password instructions", class: 'reset-btn' %>
  </div>
<% end %>